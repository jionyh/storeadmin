// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int        @id @default(autoincrement())
  name         String
  cpf          String     @unique
  email        String     @unique
  passwordHash String
  role         Role
  Purchase     Purchase[]

  @@map("users")
}

model Category {
  id          Int           @id @default(autoincrement())
  name        String
  SubCategory SubCategory[]

  @@map("categories")
}

model Unit {
  id           Int        @id @default(autoincrement())
  name         String
  abbreviation String     @db.VarChar(3)
  Purchase     Purchase[]
}

model SubCategory {
  id         Int        @id @default(autoincrement())
  name       String
  categoryId Int
  cat        Category   @relation(fields: [categoryId], references: [id])
  Purchase   Purchase[]

  @@map("subcategories")
}

model Purchase {
  id       Int      @id @default(autoincrement())
  quantity Float
  value    Float
  createAt DateTime @default(now())

  unit        Unit        @relation(fields: [unitId], references: [id])
  subcategory SubCategory @relation(fields: [itemId], references: [id])
  user        User        @relation(fields: [userId], references: [id])
  itemId      Int
  userId      Int
  unitId      Int

  @@map("purchases")
}

enum Role {
  User
  Admin
}
