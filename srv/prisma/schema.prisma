generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int        @id @default(autoincrement())
  name         String
  cpf          String     @unique
  email        String     @unique
  passwordHash String
  role         Role
  Purchase     Purchase[]

  @@map("users")
}

model Category {
  id          Int           @id @default(autoincrement())
  name        String
  SubCategory SubCategory[]

  @@map("categories")
}

model Unit {
  id           Int        @id @default(autoincrement())
  name         String
  abbreviation String     @db.VarChar(3)
  Purchase     Purchase[]
}

model SubCategory {
  id         Int        @id @default(autoincrement())
  name       String
  categoryId Int
  Purchase   Purchase[]
  cat        Category   @relation(fields: [categoryId], references: [id])

  @@map("subcategories")
}

model Purchase {
  id          Int         @id @default(autoincrement())
  quantity    Float
  value       Float
  createAt    DateTime    @default(now())
  itemId      Int
  userId      Int
  unitId      Int
  supplier    String?
  subcategory SubCategory @relation(fields: [itemId], references: [id])
  unit        Unit        @relation(fields: [unitId], references: [id])
  user        User        @relation(fields: [userId], references: [id])

  @@map("purchases")
}

model paymentsMethods {
  id    Int    @id @default(autoincrement())
  name  String
  sales sale[]
}

model sale {
  id              Int             @id @default(autoincrement())
  value           Float
  createAt        DateTime        @default(now())
  paymentId       Int
  paymentsMethods paymentsMethods @relation(fields: [paymentId], references: [id])

  @@map("sales")
}

enum Role {
  User
  Admin
}
